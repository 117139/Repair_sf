/* pages/renzheng/renzheng.wxss */
.container{
	width: 100%;
	padding-top: 18rpx;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
}
.rz_form{
	width: 100%;
}
.rz_box{
	width: 100%;
	padding: 0 24rpx;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	height: 120rpx;
	display: flex;
	align-items: center;
	margin-bottom: 2rpx;
	background-color: #fff;
}
.rz_name{
	width: 5em;
	font-family: PingFang-SC-Medium;
	font-size: 30rpx;
	color: #333333;
	text-align:justify;          
	text-justify:distribute-all-lines; 
	text-align-last:justify;     
}
.rz_box input{
	min-width: 0;
	flex: 1;
	font-size: 26rpx;
}
.getcode{
	width: 170rpx;
	padding-left: 20rpx;
	border-left: 1px solid #03a7fe;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	height: 28rpx;
	line-height: 28rpx;
	font-size: 26rpx;
	color: #03a7fe;
	text-align: center;
	margin-left: 20rpx;
}
.sexbox{
	display: flex;
	align-items: center;
	margin-right: 60rpx;
	font-size: 28rpx;
	color: #333;
}
.sex_k{
	width: 18rpx;
	height: 18rpx;
	border: solid 1px #03a7fe;
	padding: 2rpx;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	border-radius: 50%;
	margin-right: 18rpx;
}
.sex_n{
	width: 100%;
	height: 100%;
	border-radius: 50%;
	background-color: #03a7fe;
}

.sub_btn{
	margin-top: 120rpx;
	width: 480rpx;
	height: 80rpx;
	background-image: linear-gradient(90deg, 
		#59cafe 0%, 
		#5ebdff 50%, 
		#63b1ff 100%);
	border-radius: 40rpx;
	font-family: PingFang-SC-Medium;
	font-size: 28rpx;
	font-weight: bold;
	color: #ffffff;
	border: 0;
}