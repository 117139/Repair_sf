<!--pages/details/details.wxml-->
<view class="container">
	<view class="o_header">
		<image class="user_tx" src="../../static/images/tx.png"></image>
		<view class="user_msg">
			<view class="user_name">张天</view>
			<view class="fz28 c6">订单状态：维修中</view>
		</view>
		<image class="tel_icon" src="../../static/images/tel_03.png"  data-tel="18300000000" bindtap="call"></image>
	</view>
	<view class="o_tit">订单信息</view>
	<view class="o_msg">
		<view>空调维修</view>
		<view>空调不制冷,噪音大</view>
	</view>
	<view class="o_address">
		<text class="iconfont icontubiaozhizuomoban_fuzhi"></text>
		<view class="fz28">浙江省杭州市滨江区远方科技中心</view>
	</view>
	<view class="o_msg1">订单编号：23009495950</view>
	<view class="o_msg1">联系方式：18300000000</view>
	<view class="o_msg1">下单时间：2017-07-25</view>
	<view class="order_msg">
		<view class="scimg_tip">到达服务地点，拍照上传，进行定位，确保准确到达~</view>
		<view class="imgbox mb40">
			<view class="addimg1" wx:for="{{imgb}}" 
					 wx:for-index="idx"
					 wx:for-item="item"
					 wx:key="idx"
					 data-idx="{{idx}}"
					 bindtap="imgdel">
				<!-- <image  src="{{filter.imgIP(item)}}" data-src="{{filter.imgIP(item)}}"
					 mode="aspectFill"></image> -->
				<image  src="{{item}}" data-src="{{item}}"
					 mode="aspectFill"></image>
			</view>
			
			<view wx:if="{{imgb.length<9}}" class="addimg" bindtap="scpic">
				
				<image src="../../static/images/upload_03.jpg"></image>
			</view>
		</view>
	</view>
	<view class="o_address" bindtap="getLocation">
		<text class="iconfont icontubiaozhizuomoban_fuzhi"></text>
		<view class="fz28">{{activity_location}}</view>
	</view>
	<view class="w100 dis_flex ju_c">
		<view data-type="1" class="sub_btn" bindtap="subfuc1">提交</view>
	</view>
	<view class="o_tit">交易信息</view>
	<view class="o_pjmsg">
		<view>配件</view>
		<view>¥50</view>
	</view>
	<view class="o_pjmsg">
		<view>维修费</view>
		<view>¥80</view>
	</view>
	<view class="rz_box">
		<view class="rz_name">配件</view>
		<text class="mr20 fz28">:</text>
		<input type="text" name="pj" placeholder="请输入配件费用"/>
	</view>
	<view class="rz_box">
		<view class="rz_name">维修费</view>
		<text class="mr20 fz28">:</text>
		<input type="text" name="wxf" placeholder="请输入维修费用"/>
	</view>
	<view class="w100 dis_flex ju_c">
		<view data-type="1" class="sub_btn">提交</view>
	</view>
</view>
